<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sonata.user.resetting.form.factory" class="Sonata\UserBundle\Form\Factory\FormFactory">
            <argument type="service" id="form.factory" />
            <argument>sonata_user_resetting</argument>
            <argument>Sonata\UserBundle\Form\Type\ResettingPasswordType</argument>
            <argument>['ResetPassword','Default']</argument>
        </service>
        <service id="sonata.user.resetting.form.type" class="Sonata\UserBundle\Form\Type\ResettingPasswordType">
            <tag name="form.type" alias="sonata_user_resetting" />
            <argument>%sonata.user.model.user.class%</argument>
        </service>
        <service id="sonata.user.listener.resetting" class="Sonata\UserBundle\EventListener\ResettingListener">
            <tag name="kernel.event_subscriber" />
            <argument type="service" id="router" />
            <argument>%sonata.user.resetting.token_ttl%</argument>
        </service>
    </services>
</container>
