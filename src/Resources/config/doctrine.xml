<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sonata.user.user_manager.default" class="Sonata\UserBundle\Doctrine\UserManager" public="false">
            <argument type="service" id="sonata.user.util.password_updater"/>
            <argument type="service" id="sonata.user.util.canonical_fields_updater"/>
            <argument type="service" id="sonata.user.object_manager"/>
            <argument>%sonata.user.model.user.class%</argument>
        </service>
        <!-- The factory is configured in the DI extension class to support more Symfony versions -->
        <service id="sonata.user.object_manager" class="Doctrine\Common\Persistence\ObjectManager" public="false">
            <argument>%sonata.user.model_manager_name%</argument>
        </service>
        <service id="sonata.user.user_listener" class="Sonata\UserBundle\Doctrine\UserListener" public="false">
            <argument type="service" id="sonata.user.util.password_updater"/>
            <argument type="service" id="sonata.user.util.canonical_fields_updater"/>
        </service>
    </services>
</container>
